<div class="box">
  <div class="box-header">
    <h3 class="box-title">Scheme</h3>
    <div class="pull-right">
      <%= link_to " PDF ", scheme_detail_schemes_path(format: "pdf"), class: "btn btn-sm btn-info fa fa-print",:target => "_blank" %>
      
      <%= link_to " XLS ", scheme_detail_schemes_path(format: "xls"), class: "btn btn-sm btn-success fa fa-print",:target => "_blank" %>
      <%= link_to " Upload ", import_xl_schemes_path, class: 'fa fa-upload btn btn-sm btn-primary' %> 
      <%= link_to " Template", "/Templates/3.Scheme.xls", :class=>"fa fa-download btn-sm btn btn-warning" %>
      <%= link_to 'New Scheme', new_scheme_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Vehicle Type</th>
          <th>Name</th>
          <th>Budget</th>
          <th>Down Payment</th>
          <th>Status </th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% i = 0 %>
        <% @schemes.each do |scheme| %>
          <tr>
            <td><%= i = i + 1 %></td>
            <td><%= scheme.vehicle_type.name rescue nil %></td>
            <td><%= scheme.name rescue nil %></td>
            <td><%= scheme.budget %></td>
            <td><%= scheme.down_payment %></td>
<!--        <td><%#= scheme.down_payment %></td>
            <td><%#= scheme.installment %></td>
            <td><%#= scheme.installment %></td>
            <td><%#= scheme.intrest %></td> -->
            <td><%= scheme.status ? "Active" : "Inactive" %></td>
            <td>
              <%= link_to ' ', scheme, class: 'btn btn-xs btn-default fa fa-eye' %>
              <%= link_to ' ', edit_scheme_path(scheme), class: 'btn btn-xs btn-success fa fa-edit' %>
              <%= link_to ' ', scheme, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger fa fa-trash' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <%#= link_to 'Back', root_url ,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>