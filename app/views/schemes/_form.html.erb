<%= bootstrap_form_for(@scheme,html: {id: 'scheme'}) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :scheme_type,['Scheme1','Scheme2'],{include_blank: "Please Select Type", label:'Scheme Type'} %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name , label: 'Name',placeholder: 'Name' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :budget , label: 'Budget',placeholder: 'Budget' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :down_payment , label: 'Down Payment',placeholder: 'Down Payment' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :installment , label: 'Installment',placeholder: 'Installment' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :installment_amount , label: 'Installment Amount',placeholder: 'Installment Amount' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :intrest , label: 'Intrest',placeholder: 'Intrest' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :from_date, label: 'From Date', class: 'from_date'%>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :to_date, label: 'To Date', class: 'from_date'%>
        </div>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :status,[['Active','true'],['Inactive','false']],{label: 'Status',include_blank: " Select Status"} %>
      </div>
    </div>
     <div class="col-sm-6">
      <div class="form-group required">
        <%= f.text_field :description,label:'Description', placeholder: 'Duration' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <label>Image 1 Upload(only jpeg,jpg,png)</label>
      <div class="field">
        <%= f.file_field :avatar,hide_label: true %>
      </div>
    </div>

    <div class="col-sm-6">
      <label>Image 2 Upload(only jpeg,jpg,png)</label>
      <div class="field">
        <%= f.file_field :image,hide_label: true %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3" style="padding-top: 20px;">
      <div class="form-group required">
        <%= f.submit "Create Scheme ", :class => class_name, data: { disable_with: data_info } %>
        <%#= link_to 'Back', agencies_path ,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#scheme").validate({
    rules: {
      "scheme[code]":{
        required: true,
      },
      "scheme[name]":{
        required: true,
      }
       },
    messages: {
      "scheme[code]":{
        required: "Please specify code",
      },
       "scheme[name]":{
        required: "Please specify name",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });

  $('.from_date').datepicker({
  changeYear:true,
  changeMonth: true,
  yearRange: '-200:-0',
  dateFormat: 'dd-mm-yy' });

</script>


