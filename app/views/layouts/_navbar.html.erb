
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
         <%= image_tag "avatar.png",class: "img-circle", alt: "User Image", size: "25x25" %>
      </div>
      <div class="pull-left info">
      <h3 class="profile-username text-center"></h3>
        <p>
           <%= current_user.employee.try(:prefix) %> <%= current_user.employee.try(:first_name) %><br>
        </p>
      </div>
    </div>
      <% if current_user.role.name == "GroupAdmin" %>
        <%= render 'sidebars/admin' %>
      <% elsif current_user.role.name == "Admin" %>
        <%= render 'sidebars/admin' %>
      <% elsif current_user.role.name == "Branch" %>
        <%= render 'sidebars/branch' %>
      <% elsif current_user.role.name == "Tele Team Lead" %>
        <%= render 'sidebars/tele_team_lead' %>
      <% elsif current_user.role.name == "Sales Team Lead" %>
        <%= render 'sidebars/sales_team_lead' %>
      <% elsif current_user.role.name == "Finance Executive" %>
        <%= render 'sidebars/finance_executive' %>
      <% elsif current_user.role.name == "Accountant" %>
        <%= render 'sidebars/accountant' %>
      <% elsif current_user.role.name == "Delivery Executive" %>
        <%= render 'sidebars/delivery_executive' %>
      <% elsif current_user.role.name == "Tellecaller" %>
        <%= render 'sidebars/telecaller' %>

      <% else %>
        <%= render 'sidebars/telecaller' %>
      <% end %>
     
  </section>
  <!-- /.sidebar -->
</aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">

       <%= render 'layouts/messages' %>
