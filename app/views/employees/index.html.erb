<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employees</h3>
    <div class="pull-right">
      <%= link_to 'New Employees', new_employee_path, class: 'btn btn-sm btn-primary' %>
      <%#= link_to " Upload ", import_xl_agencies_path, class: 'fa fa-upload btn btn-xl btn-info' %>
      <%#= link_to " Template", "/Templates/7.Agency.xls", :class=>"fa fa-download btn-xl btn btn-warning" %>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Code</th>
          <th>Employee Name</th>
          <th>Contact No</th>
          <th>Email</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% i = 0 %>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= i = i + 1 %></td>
            <td><%= employee.code %></td>
            <td><%= employee.prefix %> <%= employee.first_name %> <%= employee.middle_name %> <%= employee.last_name %></td>
            <td><%= employee.contact_no %></td>
            <td><%= employee.email %></td>
            <td><%= employee.status ? "Active" : "Inactive" %></td>
            <td>
            <%= link_to ' ', employee, class: 'btn btn-xs btn-default fa fa-eye' %>
            <%= link_to ' ', edit_employee_path(employee), class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to ' ', employee, method: :destroy, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger fa fa-trash' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <%#= link_to 'Back', root_url ,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>