<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Address</th>
      <th>Country</th>
      <th>State</th>
      <th>District</th>
      <th>City</th>
      <th>Pin code</th>
      <th>Email</th>
      <th>Contact no</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.code %></td>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.country %></td>
        <td><%= company.state %></td>
        <td><%= company.district %></td>
        <td><%= company.city %></td>
        <td><%= company.pin_code %></td>
        <td><%= company.email %></td>
        <td><%= company.contact_no %></td>
        <td><%= company.status %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

