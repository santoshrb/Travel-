          </tr>

          <tr>
            <td><strong>Insurance(TMI/In House/Other) </strong></td>
            <td><%= @booking_communication.insurance %></td>

            <td><strong>Registration(TMI/In House/Other) </strong></td>
            <td><%= @booking_communication.registration %></td>
          </tr>

          <tr>
            <td><strong>Delivery Location </strong></td>
            <td><%= @booking_communication.delivery_location %></td>

            <td><strong>Expected Delivery Date</strong></td>
            <td><%= @booking_communication.expected_delivery %></td>
