            <th colspan="4"><font color='#0077b3'><center>Value Added Services</center></font></th>
          </tr>
          <tr>
            <td><strong>Accessories/VAS </strong></td>
            <td><%= @booking_communication.accessories ? "Yes" : "No" %></td>

            <td><strong>Extended Warranty </strong></td>
            <td><%= @booking_communication.extended_warranty ? "Yes" : "No" %></td>
          </tr>
          <tr>

            <td><strong>AMC </strong></td>
            <td><%= @booking_communication.amc ? "Yes" : "No" %></td>

            <td><strong>Other </strong></td>
            <td><%= @booking_communication.other ? "Yes" : "No" %></td>
          </tr>
          <tr>
            <td><strong>Other </strong></td>
            <td colspan="3"><%= @booking_communication.other1 ? "Yes" : "No" %></td>
          </tr>

          <tr>
          	<th colspan="4"><font color='#0077b3'><center>Commercial Detail</center></font></th>
          </tr>
