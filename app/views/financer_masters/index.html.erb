<div class="box">
  <div class="box-header">
    <h3 class="box-title"><strong>Financer Details</strong></h3>
    <div class="pull-right">
	    <%= link_to " PDF ", financer_detail_financer_masters_path(format: "pdf"), class: "btn btn-xl btn-info fa fa-print",:target => "_blank" %>
	    
	    <%= link_to " XLS ", financer_detail_financer_masters_path(format: "xls"), class: "btn btn-xl btn-success fa fa-print",:target => "_blank" %>
	    
	    <%= link_to " Upload", import_xl_financer_masters_path, class: 'fa fa-upload btn btn-xl btn-primary' %>
	    
	    <%= link_to " Template", "/Templates/1.FinancerMaster.xls", :class=>"fa fa-download btn-xl btn btn-warning" %>
	    <%= link_to 'New Financer', new_financer_master_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
		  <thead>
		    <tr>
    			<th>Sr. No</th>
		      <th>Code</th>
		      <th>Name</th>
		      <th>Contact No</th>
		      <th>Contact Person</th>
		      <th>Action</th>
		    </tr>
		  </thead>

		  <tbody>
		  	<% i = 0 %>
		    <% @financer_masters.each do |financer_master| %>
		      <tr>
      			<td><%= i = i + 1 %></td>
		        <td><%= financer_master.code %></td>
		        <td><%= financer_master.name %></td>
		        <td><%= financer_master.contact_no %></td>
		        <td><%= financer_master.contact_person %></td>
		        <td>
              <%= link_to ' ', financer_master, class: 'btn btn-xs btn-default fa fa-eye' %>
              <%= link_to ' ', edit_financer_master_path(financer_master), class: 'btn btn-xs btn-success fa fa-edit' %>
              <%= link_to ' ', financer_master, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger fa fa-trash' %>
            </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>