

 <div class="box">
  <div class="box-header">
    <h3 class="box-title">Customer Inword Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for(:salary, url: { action: 'show_bookingwise_inword'},html: {id: "salary"},remote: true) do |f| %>
  	<div class="row">
      <div class="col-sm-4">
        <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.select :vehicle_booking_id, all_vehicle_booking, {include_blank: "Select Customer",label: "Customer"},{:class=>"select2 select2-view-accessible",:style=>"width: 100%;",:tabindex=>"-1"}%>   
          </div>
        </div>
      </div>

     	<div class="col-sm-4" style="padding-top: 20px;">
        <div class="actions">
          <%= f.submit "Sumbit" ,class: 'btn btn-primary btn-sm', id: "buttonCtc" %>
        </div>
      </div>
     </div>
    <% end %>

      <div class="ajax-progress"></div>
      <div class="row">
        <div class="col-sm-12">
          <div id="bookingwise_inword"></div>    
        </div>
      </div>
    </div><!-- /.box-body -->
  </div><!-- /.box -->


<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })
</script>

<script type="text/javascript">
  
$("#salary").validate({
    rules: {
      "salary[vehicle_booking_id]":{
        required: true,
      }
       },
    messages: {
      "salary[vehicle_booking_id]":{
        required: "Please Specify From",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>