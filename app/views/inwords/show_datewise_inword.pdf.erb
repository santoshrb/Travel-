<table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
  <thead>
    <tr>
      <td colspan="9"><center> 
        <% if current_user.employee.company.logo == nil %>
        <% else %>
          <center> <%= wicked_pdf_image_tag current_user.employee.company.logo.url, :size => "120x80" %></center>
        <%end%> 
          <strong><%=current_user.employee.company.try(:name)%></strong> <br> <%= current_user.employee.company.try(:address)%></center>
      </td>
    </tr> 
    <tr> 
      <th>Sr. No</th>
      <th>Date</th>
      <th>Customer</th>
      <th>Payment type</th>
      <th>Amount</th>
      <th>Receipt no</th>
      <th>Employee</th>
      <th>Vendor name</th>
      <th>Contact no</th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @inwords.each do |inword| %>
      <tr>
      	<td><%= i = i + 1 %></td>
        <td><%= inword.date %></td>
        <td><%= inword.vehicle_booking.enquiry.name_first %> <%= inword.vehicle_booking.enquiry.last_name %> - <%= inword.vehicle_booking.enquiry.mobile_no %></td>
         <td><%= inword.payment_type %></td>
        <td><%= inword.amount %></td>
        <td><%= inword.receipt_no %></td>
        <td><%= inword.employee.prefix %> <%= inword.employee.first_name %> <%= inword.employee.last_name %></td>
        <td><%= inword.vendor_name %></td>
        <td><%= inword.contact_no %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <div id="show_inword_detail" class="modal fade"></div>
