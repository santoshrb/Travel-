<div class="box box-default">
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <tbody>
        <tr>
          <th colspan="5">
            <strong><center>Enquiries Detail</center></strong>
          </th>
        </tr>
        <tr>
          <%#= image_tag @agency.avatar.url(:medium),class: "profile-user-img img-responsive img-circle", alt: "User Image",size: "25x25" %>
        </tr>
        <tr>
          <th>Mobile No.</th>
          <td><%= @enquiry.mobile_no %></td>
          <th> Name </th>
          <td><%= @enquiry.name_first %> <%= @enquiry.middle_name %> <%= @enquiry.last_name %> </td>
        </tr>
        <tr>
          <th>Email </th>
          <td><%= @enquiry.email %></td>
          <th>Place</th>
          <td><%= @enquiry.place %></td>
        </tr>
        <tr>
          <th> Date </th>
          <td><%= @enquiry.enquiry_date %></td>
          <th>Scheme</th>
          <td><%= @enquiry.scheme.try(:name) %></td>
        </tr>
        <tr>
          <th>Address</th>
          <td colspan="3"><%= @enquiry.try(:address) %></td>
        </tr>
        <tr>
          <th>Description</th>
          <td colspan="3"><%= @enquiry.try(:description) %></td>
        </tr>
      </tbody>
    </table><br>
    <%= link_to " PDF ", show_enquiry_enquiries_path(enquiry_id: @enquiry.id,format: "pdf"), class: "btn btn-sm btn-info fa fa-print",:target => "_blank" %>
    <%= link_to 'Edit', edit_enquiry_path(@enquiry), class: 'btn btn-default btn-sm fa' %> |
    <%= link_to 'Back', enquiries_path ,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div>
</div>
