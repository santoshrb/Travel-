<%= bootstrap_form_for(@enquiry,html: {id: 'enquiry'}) do |f| %>
<%#= bootstrap_form_for :enquiry,url:{action: "display_scheme"} do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :mobile_no, label:'Mobile No.', placeholder: '0987654321' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name_first, label:'First Name', placeholder: 'Truba' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :middle_name, label:'Middle Name', placeholder: 'Truba' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :last_name, label:'Last Name', placeholder: 'xyz' %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :email,label:'Email', placeholder: 'enquiry@gmail.com' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :place, label:'Pin Code', placeholder: 'Pune' %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group required">
        <%= f.text_field :address,label:'Address', placeholder: 'xyz.' %>
      </div>
    </div>
  </div>
    
  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= select :enquiry, :vehicle_type_id, all_vehicle_type,{include_blank: 'Select Type'},{onchange:"var a={vehicle_type_id:$(this).val()};$('.ajax-progress').show(); $.get('/enquiries/display_scheme',a,function(response){});",class: 'form-control'} %>
      </div>
    </div>

    <div class="col-sm-3" style="padding-top: 20px;">
      <div class="form-group required">
        <%= f.submit "Create Enquiry", :class => class_name, data: { disable_with: data_info } %>
        <%#= link_to 'Back', agencies_path ,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
      </div>
    </div>
  </div>
  
  <div id="scheme_list"></div>
<% end %>

<script>
$("#company").validate({
  rules: {
    "company[code]":{
      required: true,
    },
    "company[name]":{
      required: true,
    }
     },
  messages: {
    "company[code]":{
      required: "Please specify code",
    },
     "company[name]":{
      required: "Please specify name",
    }
     },
  errorPlacement: function(error, element) {
   error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
   error.insertAfter(element.parent(element));
  }
});
</script>

