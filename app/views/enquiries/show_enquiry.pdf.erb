<table style="border-collapse: collapse; font-size:12pt;" border=1 width=1200 cellpadding="10" cellspacing="10">
  <tbody>
    <tr>
      <th colspan="5">
        <strong><center>Enquiry Detail</center></strong>
      </th>
    </tr>
    <tr>
      <th>Mobile No.</th>
      <td><%= @enquiry.mobile_no %></td>
      <th> Name </th>
      <td><%= @enquiry.name_first %> <%= @enquiry.middle_name %> <%= @enquiry.last_name %> </td>
    </tr>
    <tr>
      <th>Email </th>
      <td><%= @enquiry.email %></td>
      <th>Place</th>
      <td><%= @enquiry.place %></td>
    </tr>
    <tr>
      <th> Date </th>
      <td><%= @enquiry.enquiry_date %></td>
      <th>Scheme</th>
      <td><%= @enquiry.scheme.try(:name) %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td colspan="3"><%= @enquiry.try(:address) %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td colspan="3"><%= @enquiry.try(:description) %></td>
    </tr>
  </tbody>
</table><br>

<% if @enquiry.scheme_id == nil %>
<% else %>
  <table style="border-collapse: collapse; font-size:12pt;" border=1 width=1200 cellpadding="10" cellspacing="10">
    <thead>
      <tr><th colspan="4"><strong><center>Scheme Detail</center></strong></th></tr>
      <tr>
        <td><strong>Scheme</strong></td>
          <td><%= @enquiry.scheme.try(:name) %></td>
      
        <td><strong>Budget</strong></td>
          <td><%= @enquiry.try(:scheme).try(:budget) %></td>
      </tr>
      <tr>
        <td><strong>Down Payment</strong></td>
          <td><%= @enquiry.try(:scheme).try(:down_payment) %></td>
      
        <td><strong>Interest</strong></td>
          <td><%= @enquiry.try(:scheme).try(:intrest) %></td>
      </tr>
      <tr>
        <td><strong>Installment Amount</strong></td>
          <td><%= @enquiry.try(:scheme).try(:installment_amount) %></td>
      
        <td><strong>Scheme Type</strong></td>
          <td><%= @enquiry.try(:scheme).try(:scheme_type) %></td>
      </tr>
      <tr>
        <td><strong>Installment</strong></td>
          <td><%= @enquiry.try(:scheme).try(:installment) %></td>
      
        <td><strong>Vehicle Type</strong></td>
          <td><%= @enquiry.try(:scheme).try(:vehicle_type).try(:name) %></td>
      </tr>
      <tr>
        <td><strong>Description</strong></td>
          <td colspan="3"><%= @enquiry.try(:scheme).try(:description) %></td>
      </tr>
    </thead>
  </table>
<% end %>