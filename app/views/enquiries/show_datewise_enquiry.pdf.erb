<table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
      <thead>
        <tr>
          <td colspan="27"><center> 
            <% if current_user.employee.company.logo == nil %>
            <% else %>
              <center> <%= wicked_pdf_image_tag current_user.employee.company.logo.url, :size => "120x80" %></center>
            <%end%> 
              <strong><%=current_user.employee.company.try(:name)%></strong> <br> <%= current_user.employee.company.try(:address)%></center>
          </td>
        </tr> 
        <tr>
          <th>Sr.No</th>
          <th>Mobile no</th>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Place</th>
          <th>Date</th>
        </tr>
      </thead>

      <tbody>
        <% i = 0 %>
        <% @enquiries.each do |enquiry| %>
          <tr>
            <td><%= i = i + 1 %></td>
            <td><%= enquiry.mobile_no %></td>
            <td><%= enquiry.name_first %> <%= enquiry.middle_name %> <%= enquiry.last_name %></td>
            <td><%= enquiry.email %></td>
            <td><%= enquiry.address %></td>
            <td><%= enquiry.place %></td>
            <td><%= enquiry.enquiry_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>