<div class="box">
  <div class="box-body">

	<table id="example6" class="table table-bordered table-hover table-condensed'">
	  <thead>
	    <tr> 
	      <th>Sr. No</th>
	      <th>Date</th>
	      <th>Employee</th>
	      <th>Amount</th>
	      <th>Handover to</th>
	      <!-- <th>Handover</th> -->
	      <!-- <th>Purpose</th> -->
	    </tr>
	  </thead>
	  <tbody>
	    <% i = 0 %>
	    <% @outwords.each do |outword| %>
	      <tr>
	        <td><%= i = i + 1 %></td>
	        <td><%= outword.date %></td>
	        <td><%= outword.employee.prefix %> <%= outword.employee.first_name %> <%= outword.employee.last_name %></td>
	        <td><%= outword.amount %></td>
	        <td><%= outword.handover_to %></td>
	       <!--  <td><%#= outword.handover_id %></td> -->
	        <!-- <td><%#= outword.purpose %></td> -->
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	  <br>
	    <%= link_to " Excel ",show_datewise_outword_outwords_path(:salary =>{:from => params[:salary][:from],:to => params[:salary][:to]}, format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
	    <%= link_to " PDF ",show_datewise_outword_outwords_path(:salary =>{:from => params[:salary][:from],:to => params[:salary][:to]}, format: "pdf"), class: "btn btn-xl btn-primary fa fa-print",:target => "_blank" %>
	  </div>
	</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
